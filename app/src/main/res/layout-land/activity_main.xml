<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dregradado"
    tools:context=".MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/weatherCard3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#9039496B">

                    <ImageView
                        android:id="@+id/search"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center|start"
                        app:srcCompat="@android:drawable/ic_menu_search" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">
                        <TextView
                            android:id="@+id/cityTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ciudad"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical" />

                        <EditText
                            android:id="@+id/searchEditText"
                            android:layout_width="250dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColorHint="@color/white"
                            android:hint="Introduzca una ciudad"
                            android:background="@null"
                            android:textColor="@android:color/black"
                            android:visibility="gone"
                            android:layout_marginEnd="35dp"
                            android:paddingStart="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/linea"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="@null" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/weatherCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:backgroundTint="#900A4865"
                    android:layout_marginTop="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:orientation="horizontal"
                            android:gravity="center|top">

                            <ImageView
                                android:id="@+id/weatherIcon"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/sunny_icon"
                                android:layout_margin="15dp" />

                            <TextView
                                android:id="@+id/tempTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Temperatura"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="50sp"
                                android:layout_marginTop="30dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tempMinMax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/hora"
                            android:text="Hora"
                            android:textStyle="bold"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/weatherCard2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:backgroundTint="#9039496B"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/descrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DescripciÃ³n"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:padding="16dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#9039496B"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prevision 24 horas"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_margin="30dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:clipToPadding="false"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginTop="55dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:scrollbars="none" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#9039496B"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:id="@+id/et2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Amanecer"
                                android:textSize="16sp"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:gravity="center_horizontal" />

                            <TextView
                                android:id="@+id/etiqueta"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Anochecer"
                                android:textSize="16sp"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:gravity="center_horizontal" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:src="@drawable/sunrise"
                                android:layout_marginEnd="350dp"
                                />

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:src="@drawable/sunset"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="20dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/amanecer"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Amanecer"
                                android:textSize="16sp"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:gravity="center_horizontal" />

                            <TextView
                                android:id="@+id/anochecer"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Anochecer"
                                android:textSize="16sp"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:gravity="center_horizontal" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="175dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#9039496B"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:src="@drawable/wind"
                                android:layout_gravity="center"
                                android:layout_marginTop="30dp"/>

                            <TextView
                                android:id="@+id/rafaga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rafaga de viento: "
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="12dp"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/velocidad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Velocidad de viento: "
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="12dp"
                                android:layout_gravity="center"/>



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="175dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#9039496B"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:src="@drawable/presion"
                                android:layout_gravity="center"
                                android:layout_marginTop="30dp"/>

                            <TextView
                                android:id="@+id/presion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PresiÃ³n atmosfÃ©rica: "
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="10dp"
                                android:layout_gravity="center"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="175dp"
                        android:layout_height="140dp"
                        android:backgroundTint="#9039496B"
                        app:cardCornerRadius="16dp"
                        android:layout_marginTop="20dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:src="@drawable/radiation"
                                android:layout_gravity="center"
                                android:layout_marginTop="30dp"/>

                            <TextView
                                android:id="@+id/radiation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RadiaciÃ³n "
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="10dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/solarEnergy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Energia solar "
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="10dp"
                                android:layout_gravity="center"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="175dp"
                        android:layout_height="140dp"
                        android:backgroundTint="#9039496B"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:src="@drawable/uv"
                                android:layout_gravity="center"
                                android:layout_marginTop="30dp"/>

                            <TextView
                                android:id="@+id/radiationUV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RadiaciÃ³n UV "
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"/>



                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>



